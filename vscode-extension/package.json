{
  "name": "nova-robot-control-websocket",
  "displayName": "Nova Robot Control (WebSocket)",
  "description": "Real-time Nova robot control via WebSocket connection - Enhanced with comprehensive event system, robot registration, and parallel execution support",
  "version": "3.0.0",
  "buildTimestamp": "2025-07-14T16:45:00Z",
  "publisher": "wandelbots",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension-websocket.js",
  "contributes": {
    "configuration": {
      "title": "Nova Robot Control",
      "properties": {
        "nova.websocket.host": {
          "type": "string",
          "default": "localhost",
          "description": "WebSocket server host to connect to",
          "scope": "window"
        },
        "nova.websocket.port": {
          "type": "number",
          "default": 8765,
          "minimum": 1,
          "maximum": 65535,
          "description": "WebSocket server port to connect to",
          "scope": "window"
        },
        "nova.websocket.autoReconnect": {
          "type": "boolean",
          "default": true,
          "description": "Automatically reconnect to WebSocket server when connection is lost",
          "scope": "window"
        },
        "nova.websocket.reconnectInterval": {
          "type": "number",
          "default": 3000,
          "minimum": 1000,
          "maximum": 30000,
          "description": "Reconnection interval in milliseconds",
          "scope": "window"
        }
      }
    },
    "commands": [
      {
        "command": "nova.showPanel",
        "title": "Nova: Show Robot Controls (Quick Pick)"
      },
      {
        "command": "nova.showControlPanel",
        "title": "Nova: Show Robot Control Panel"
      },
      {
        "command": "nova.showHelp",
        "title": "Nova: Show Help"
      },
      {
        "command": "nova.refreshRobots",
        "title": "Nova: Refresh Robot List"
      },
      {
        "command": "nova.focus",
        "title": "Focus Nova Robot Control",
        "icon": "$(robot)"
      }
    ],
    "views": {
      "nova-robot-control": [
        {
          "id": "nova.robotControlView",
          "name": "Robot Control",
          "when": "true",
          "type": "webview"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "nova-robot-control",
          "title": "Nova Robot Control",
          "icon": "resources/robot-icon.svg"
        }
      ]
    },
    "menus": {
      "commandPalette": [
        {
          "command": "nova.showPanel",
          "when": "true"
        },
        {
          "command": "nova.showControlPanel",
          "when": "true"
        },
        {
          "command": "nova.showHelp",
          "when": "true"
        },
        {
          "command": "nova.refreshRobots",
          "when": "true"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "echo 'No build step required'",
    "package": "vsce package"
  },
  "dependencies": {
    "ws": "^8.0.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wandelbotsgmbh/wandelbots-nova"
  },
  "keywords": [
    "nova",
    "robots",
    "wandelbots",
    "automation",
    "websocket",
    "real-time"
  ]
}
