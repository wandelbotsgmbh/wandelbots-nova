{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2021",
    "lib": ["ES2021", "DOM"],
    "types": ["vscode", "node", "mocha"],
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "outDir": "out",
    "strict": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "out"]
}
