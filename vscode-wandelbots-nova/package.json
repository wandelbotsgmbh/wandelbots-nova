{
  "name": "wandelbots-nova",
  "displayName": "Wandelbots NOVA",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.99.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wandelbotsgmbh/wandelbots-nova"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:lineMarker.toggleHere",
    "onCommand:lineMarker.refresh"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "lineMarker.toggleHere",
        "title": "Line Marker: Toggle at Current Line"
      },
      {
        "command": "lineMarker.refresh",
        "title": "Line Marker: Refresh Decorations"
      }
    ],
    "configuration": {
      "title": "Line Marker",
      "properties": {
        "lineMarker.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable gutter markers."
        },
        "lineMarker.triggerRegex": {
          "type": "string",
          "default": "(TODO|FIXME)",
          "description": "Regex to match lines that should get a marker (case-insensitive)."
        },
        "lineMarker.showInOverviewRuler": {
          "type": "boolean",
          "default": true,
          "description": "Also show marks in the overview ruler."
        },
        "lineMarker.debounceMs": {
          "type": "number",
          "default": 200,
          "minimum": 0,
          "description": "Debounce (ms) before scanning file for matches."
        }
      }
    }
  },
  "scripts": {
    "build": "webpack --mode production",
    "watch": "webpack --watch",
    "vscode:prepublish": "webpack --mode production",
    "package": "vsce package",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.0.0",
    "eslint": "^9.32.0",
    "mocha": "^11.7.1",
    "ts-loader": "^9.5.2",
    "typescript": "^5.9.2",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1"
  }
}
